.rgs-body
  .logo-header
    %h1
      = link_to root_path, class: 'header-link' do
        = image_tag 'logo.svg', alt: 'mercari', class: 'header-logo', height: '49', width: '185'
  .rgs-main
    .rgs-main__section
      %h2 新規会員登録
      .form
        .btn-email
          = link_to 'メールアドレスで登録する', root_path, class:'about__registered'
          %i.fas.fa-envelope
        .btn-facebook
          %i.fab.fa-facebook-square
          = link_to 'facebookで登録する', root_path, class:'about__registered'
        .btn-google
          = link_to 'googleで登録する', root_path, class:'about__registered'
  =render "sub-footer"