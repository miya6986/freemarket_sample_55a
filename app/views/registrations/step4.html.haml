.rgs-body
  =render "rgs-header"
  .rgs-main
    .rgs-main__section
      %h2 発送元・お届け先住所入力
      = form_for @user, url: registrations_path, method: :post, html: { class: 'form' } do |f|
        .form__upper
          .form__upper__group
            %label お名前
            %span.form-require 必須
            = f.fields_for :address, @user.build_address, html: {class: 'input-default'} do |f|
              = f.text_field :address_firstname, placeholder: '例）山田', class: 'input-default'
              = f.text_field :address_lastname, placeholder: '例）彩', class: 'input-default'
          .form__upper__group
            %label お名前カナ
            %span.form-require 必須
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :address_firstname_kana, placeholder: '例）ヤマダ', class: 'input-default'
              = f.text_field :address_lastname_kana, placeholder: '例）アヤ', class: 'input-default'
          .form__upper__group
            %label 郵便番号
            %span.form-require 必須
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :postalcode, placeholder: '郵便番号', class: 'input-default'
          .form__upper__group
            %label 都道府県
            %span.form-require 必須
          = f.fields_for :address, @user.build_address do |f|
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, class: 'input-default'
          .form__upper__group
            %label 市区町村
            %span.form-require 必須
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :city_name, placeholder: '市区町村', class: 'input-default'
          .form__upper__group
            %label 番地
            %span.form-require 必須
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :address_number, placeholder: '番地', class: 'input-default'
          .form__upper__group
            %label 建物名
            %span.form-require-optional 任意
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :building_name, placeholder: '建物名', class: 'input-default'
          .form__upper__group
            %label 電話
            %span.form-require-optional 任意
            = f.fields_for :address, @user.build_address do |f|
              = f.text_field :address_phone_number, placeholder: '電話', class: 'input-default'
          .form__bottom
            .form__upper__group
              %p
            .form__upper__group
              %button.btn-default{type: "submit"} 次へ進む
  =render "sub-footer"

