.rgs-header
  %h1
    = link_to root_path, class: 'header-link' do
      = image_tag 'logo.svg', alt: 'mercari', class: 'header-logo', height: '49', width: '185'
  %nav.progress
    %ol.proguress-bar
      %li.first
        会員情報
        .progress-status-first
        .progress-status_bar.step2{class:" #{ 'active' if controller.action_name.in?(['step3','step4','step5','step6'])}"}
      %li 
        電話番号認証
        .progress-status{class:"#{ 'active' if controller.action_name.in?(['step3','step4','step5','step6'])}"}
        .progress-status_bar.step3{class:" #{ 'active' if controller.action_name.in?(['step4','step5','step6'])}"}
      %li 
        お届け先住所入力
        .progress-status{class:" #{ 'active' if controller.action_name.in?(['step4','step5','step6'])}"}
        .progress-status_bar.step4{class:" #{ 'active' if controller.action_name.in?(['step5','step6'])}"}
      %li 
        支払い方法
        .progress-status{class:" #{ 'active' if controller.action_name.in?(['step5','step6'])}"}
        .progress-status_bar.step5{class:" #{ 'active' if controller.action_name.in?(['step6'])}"}
      %li  
        完了
        .progress-status{class:" #{ 'active' if controller.action_name.in?(['step6'])}"}