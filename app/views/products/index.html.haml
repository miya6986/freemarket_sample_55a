= render 'shared/main-header'
.img_wapper
  = image_tag 'mercari-top.png', alt: 'mercari-top'
.top-wrapper 
  .top-container
    .category-info
      .category-info__text 
        %h2 人気のカテゴリー
      %ul.category-info__tags
        %li.category-tag
          レディース
        %li.category-tag
          メンズ
        %li.category-tag
          家電・スマホ・カメラ
        %li.category-tag
          おもちゃ・ホビー・グッズ
    .new-items-container
      .category-title
        %h3 レディース新着アイテム
        .more
          もっと見る
          = fa_icon 'chevron-right'
      %ul.category-items
        - @products.each do |product|
          %li.category-item 
            = render partial: 'products/product-list', locals: { product: product }
    .brand-info
      .brand-info__text
        %h2 人気のブランド
      %ul.brand-info__tags
        %li.brand-tag
          シャネル
        %li.brand-tag
          ルイヴィトン
        %li.brand-tag
          シュプリーム
        %li.brand-tag
          ナイキ
    .new-items-container
      .brand-title
        %h3 シャネル新着アイテム
        .more
          もっと見る
          = fa_icon 'chevron-right'
      %ul.brand-items
        - @products.each do |product|
          %li.brand-item
            = render partial: 'products/product-list', locals: { product: product }
= render 'shared/sell-button'
= render 'shared/main-footer'


