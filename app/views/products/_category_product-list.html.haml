.new-items-container-top
  .category-title#lady_items
    %h3 レディース新着アイテム
    .more
      = link_to "もっと見る", category_path(@ladies)
      = fa_icon 'chevron-right'
  %ul.category-items
    - @ladies.products.recent.each do |product|
      %li.category-item.fadein
        = render partial: 'products/product-list', locals: { product: product }
