%header.top-header
  .top-header-container
    .header-upper
      .header-upper--logo= image_tag 'header-logo.svg', alt: 'header-logo', class:'image'
      %form{ class:'search'}
        %input{ type: "search", name: "keyword", placeholder: "何かお探しですか？",class: 'search__text-field'}
        %button{class: 'search__button' }
          = fa_icon 'search lg'
    .header-lower
      .menu-left
        .menu-left__item
          = fa_icon 'list lg', class:'menu-left__item--icon'
          カテゴリーから探す
        .menu-left__item
          = fa_icon 'tag lg',class:'menu-left__item--icon'
          ブランドから探す
      .menu-right
        - if controller.controller_name == "users"
          .menu-right__item
            .signup
              新規会員登録
          .menu-right__item
            .login
              ログイン
        
