%header.top-header
  .top-header-container
    .header-upper
      .header-upper--logo
        = link_to root_path do
          = image_tag 'header-logo.svg', alt: 'header-logo', class: 'image'
      = search_form_for @q, url: search_products_path, html: {class: "search"} do |f|
        = f.text_field :name_cont , placeholder: "何かお探しですか？", class: 'search__text-field'
        = button_tag type: 'submit', class: 'search__button' do
          = fa_icon 'search lg' 
    .header-lower
      .menu-left
        = render 'shared/category-menu'
        .menu-left__item
          = fa_icon 'tag lg',class:'menu-left__item--icon'
          ブランドから探す
      %ul.menu-right
        - if  user_signed_in?
          %li.menu-right__item.likes
            .icon
              = fa_icon 'heart lg'
            いいね！一覧
          %li.menu-right__item.notice
            .icon
              = fa_icon 'bell lg'
            お知らせ
          %li.menu-right__item.todo
            .icon
              = fa_icon 'check lg'
            やることリスト
          %li.menu-right__item.mypage
            = link_to users_path do
              = image_tag 'member_photo_noimage_thumb.png', class: 'member-image'
              マイページ
        - else
          %li
            = link_to "新規会員登録", step1_registrations_path, class:"menu-right__item signup"
          %li
            = link_to "ログイン", new_user_session_path, class:"menu-right__item login"
